generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model User {
  id        Int      @id @default(autoincrement())
  firstName String
  lastName  String
  email     String   @unique
  password  String
  animals   Animal[]
}

model Animal {
  id          Int     @id @default(autoincrement())
  description String
  race        String
  poids       Float
  taille      Float
  user        User    @relation(fields: [userId], references: [id])
  userId      Int
  cabinet     Cabinet? @relation(fields: [cabinetId], references: [id], onDelete: SetNull)
  cabinetId   Int?
}

model Cabinet {
  id      Int      @id @default(autoincrement())
  nom     String
  adresse String
  animals Animal[]
}
